<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_bar_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivUserAvatar_ICONT"
            android:layout_width="@dimen/contact_picture_default_size"
            android:layout_height="@dimen/contact_picture_default_size"
            android:layout_margin="@dimen/padding_half"
            android:src="@drawable/ic_userpic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/ivUserAvatar_ICONT"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvContactName_ICONT"
                style="@style/ContactNameTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_default"
                android:text="Gal Ferenc" />

            <TextView
                android:id="@+id/tvContactNumber_ICONT"
                style="@style/ContactPhoneTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_default"
                android:text="0993527900" />
        </LinearLayout>


        <CheckBox
            android:id="@+id/cbContactSelected_ICONT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/padding_double" />
    </RelativeLayout>

</LinearLayout>