<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlReBroadcast_VRB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRebroadcast">

    <ImageView
        android:id="@+id/ivReBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_re_diffuser_ic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivReBroadcast"
        android:layout_centerHorizontal="true"
        android:text="@string/button_re_broadcast"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_very_small" />
</RelativeLayout>