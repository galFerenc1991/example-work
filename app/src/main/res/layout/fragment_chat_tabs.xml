<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_FChT"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"

        android:background="@color/colorWhite"
        android:elevation="@dimen/padding_half"
        app:tabIndicatorColor="@color/color_tab_indicator"
        app:tabSelectedTextColor="@color/msgMyGoodDealDiffusionColor"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
        app:tabTextColor="@color/textColorGray" />

    <View
        android:id="@+id/viewUnderline_FChT"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tabLayout_FChT"
        android:background="@color/colorWhite"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shadow"
        android:layout_below="@+id/viewUnderline_FChT"/>

</RelativeLayout>