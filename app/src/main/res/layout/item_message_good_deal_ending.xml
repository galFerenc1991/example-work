<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/margin_upper_medium"
    android:layout_marginBottom="@dimen/margin_upper_medium"
    >

    <TextView
        android:id="@+id/tvDealEndingState_IMGDE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_default"
        android:text="@string/text_bon_plan_close"
        android:layout_margin="@dimen/margin_quart"/>
    <View
        android:id="@+id/viewUnderline_IMGDE"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_width"
        android:background="@color/colorRed"/>

</LinearLayout>