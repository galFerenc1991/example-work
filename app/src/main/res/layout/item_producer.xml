<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_default"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvProducer_IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ContactNameTextStyle"
        android:textColor="@color/colorBlackTransparent"
        android:gravity="center"
        android:drawablePadding="@dimen/padding_upper_large"
        android:text="@string/send_order_list_producer"
        android:layout_centerVertical="true"
        android:drawableStart="@drawable/ic_producer"/>

    <ImageView
        android:id="@+id/ivEditProducer_IP"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_edit"/>

</RelativeLayout>