<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorWhite"
        android:minHeight="@dimen/item_default_height">

        <TextView
            android:id="@+id/tvInputTitle_ABCCVVI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            android:text="@string/text_cvv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvInputTitle_ABCCVVI"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etCVV_ABCCVVI"
                style="@style/CreateOrderPopUpProductNameTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:drawableBottom="@drawable/bg_et_bottom_line"
                android:focusable="true"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="3"
                android:minWidth="@dimen/margin_double"
                android:paddingBottom="@dimen/margin_default"
                android:singleLine="true" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>